@model FirstProject.Models.University

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>University</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UniversityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UniversityName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            Connected faculties
        </dt>
        @if (Model.Faculties is not null)
        {
            @:<dd class="col-sm-10">
                foreach (Faculty faculty in Model.Faculties)
                {
                    @faculty.FacultyName;
                    @: &nbsp;
                    // if (Model.Faculties.Count > 1)
                    // {
                    //     ",";
                    // }
                }
            @:</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UniversityID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
